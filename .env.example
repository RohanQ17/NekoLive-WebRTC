# NekoLive Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# CORS Configuration (comma-separated origins for production)
ALLOWED_ORIGINS=https://nekolive.app,https://www.nekolive.app

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/nekolive/app.log

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Session Configuration
SESSION_TIMEOUT=300000
MAX_ROOM_SIZE=10
MAX_ROOMS=1000

# Security Configuration
ENABLE_IP_LOGGING=true
ENABLE_USER_AGENT_LOGGING=true
BLOCK_SUSPICIOUS_IPS=true

# AWS Configuration (if deploying to AWS)
AWS_REGION=us-east-1
AWS_S3_BUCKET=nekolive-static-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# Database Configuration (for future scaling)
# REDIS_URL=redis://localhost:6379
# DB_CONNECTION_STRING=your-database-connection-string
