  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/NekoLive.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/NekoLive/issues"
  },
  "homepage": "https://github.com/your-username/NekoLive#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  }
}
