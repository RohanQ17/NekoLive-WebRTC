{
  "name": "nekolive-webrtc",
  "version": "2.0.0",
  "description": "Production-ready WebRTC video chat application with real-time messaging",
  "main": "signaling-server.js",
  "scripts": {
    "start": "node signaling-server.js",
    "dev": "nodemon signaling-server.js",
    "prod": "NODE_ENV=production node signaling-server.js",
    "test": "echo \"Tests coming soon\" && exit 0",
    "lint": "echo \"Linting coming soon\" && exit 0",
    "build": "echo \"Build process for static files\" && exit 0",
    "docker:build": "docker build -t nekolive .",
    "docker:run": "docker run -p 8080:8080 --env-file .env nekolive",
    "docker:compose": "docker-compose up -d",
    "deploy:aws": "powershell -ExecutionPolicy Bypass -File deploy-aws.ps1",
    "deploy:prod": "bash deploy-production.sh",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "logs": "pm2 logs nikolive --lines 100"
  },
  "keywords": [
    "webrtc",
    "video-chat",
    "real-time",
    "peer-to-peer",
    "websocket",
    "signaling",
    "production-ready",
    "aws",
    "docker"
  ],
  "author": "RohanQ17",
